{
  "compilerOptions": {
    "target": "es2024",
    "lib": ["es2024"],
    "allowJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@config": ["config.ts"],
      "@util/*": ["util/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
